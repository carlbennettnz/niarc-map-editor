<g class="line-handles {{if line.isSelected 'selected'}} {{line.layer}}-layer">
  <circle
    class="handle"
    cx={{scale line.points.x1 viewport.zoom}}
    cy={{scale line.points.y1 viewport.zoom}}
  ></circle>

  <circle
    class="handle"
    cx={{scale line.points.x2 viewport.zoom}}
    cy={{scale line.points.y2 viewport.zoom}}
  ></circle>
</g>
