<g class="path {{if line.isInProgress 'in-progress'}} {{if line.isSelected 'selected'}} {{line.layer}}-layer">
  <path class="contruction-path" d={{constructionPath}}></path>
  <path d={{path}}></path>

  {{#each line.points as |point|}}
    <circle
      class="handle {{if point.isSelected 'selected'}} {{if point.isHighlighted 'highlighted'}}"
      cx={{scale point.x viewport.zoom}}
      cy={{scale point.y viewport.zoom}}
      r="4"></circle>
  {{/each}}
</g>
