<g class="line {{if line.isInProgress 'in-progress'}} {{if line.isSelected 'selected'}} {{line.layer}}-layer">
  <line
    x1={{scale line.points.x1 viewport.zoom}}
    y1={{scale line.points.y1 viewport.zoom}}
    x2={{scale line.points.x2 viewport.zoom}}
    y2={{scale line.points.y2 viewport.zoom}}
  ></line>
</g>
